extends layout

block content
  div.wrap.container-fluid
    div.page-header
      h1.text-center.white 登录
    form.w80
      div.form-group.input-group
        span.input-group-addon
          i.iconfont.icon-user
        input(type='text',placeholder='请输入用户名',name='user')#user.form-control.input-lg
      div.form-group.input-group
        span.input-group-addon
          i.iconfont.icon-key
        input(type='password',placeholder='请输入密码',name='psd')#password.form-control.input-lg

      div.form-group
        input(type='submit',value='登录').form-control.btn-primary.input-lg
